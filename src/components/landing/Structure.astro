---
const saatler = {
  "2024-03-05": { imsak: "05:49", iftar: "19:13" },
};

const now = new Date();
const today = now.toISOString().split("T")[0];
let currentDay = saatler[today] || {
  imsak: "Belirlenmemiş",
  iftar: "Belirlenmemiş",
};

function calculateRemainingTime(time) {
  const now = new Date();
  const [hour, minute] = time.split(":").map(Number);
  const targetTime = new Date(now);
  targetTime.setHours(hour, minute, 0, 0);
  let diff = targetTime.getTime() - now.getTime();

  if (diff < 0) {
    targetTime.setDate(targetTime.getDate() + 1);
    diff = targetTime.getTime() - now.getTime();
  }

  return calculateRemainingTimeFromMillis(diff);
}

function calculateRemainingTimeFromMillis(milliseconds) {
  const remainingHours = Math.floor(milliseconds / (1000 * 60 * 60));
  const remainingMinutes = Math.floor((milliseconds % (1000 * 60 * 60)) / (1000 * 60));
  const remainingSeconds = Math.floor((milliseconds % (1000 * 60)) / 1000);
  return `${remainingHours} : ${remainingMinutes} : ${remainingSeconds}`;
}

// Şu anki saat ve dakika
const currentHour = now.getHours();
const currentMinute = now.getMinutes();
console.log(`Şu anki saat: ${currentHour}:${currentMinute}`);

const remainingToImsak = calculateRemainingTime(currentDay.imsak);
const remainingToIftar = calculateRemainingTime(currentDay.iftar);
