<script>
  document.addEventListener("DOMContentLoaded", function () {
    const saatler = {
      "2024-03-05": { imsak: "05:49", iftar: "19:13" },
    };

    const now = new Date();
    const today = now.toISOString().split("T")[0];
    let currentDay = saatler[today] || {
      imsak: "Belirlenmemiş",
      iftar: "Belirlenmemiş",
    };

    function calculateRemainingTime(time) {
      const now = new Date();
      const [hour, minute] = time.split(":").map(Number);
      const targetTime = new Date(now);
      targetTime.setHours(hour, minute, 0, 0);
      let diff = targetTime.getTime() - now.getTime();

      if (diff < 0) {
        targetTime.setDate(targetTime.getDate() + 1);
        diff = targetTime.getTime() - now.getTime();
      }

      return calculateRemainingTimeFromMillis(diff);
    }

    function calculateRemainingTimeFromMillis(milliseconds) {
      const remainingHours = Math.floor(milliseconds / (1000 * 60 * 60));
      const remainingMinutes = Math.floor((milliseconds % (1000 * 60 * 60)) / (1000 * 60));
      const remainingSeconds= Math.floor((milliseconds % (1000 * 60)) / 1000);
      return `${remainingHours} : ${remainingMinutes} : ${remainingSeconds}`;
    }

    function updateRemainingTime() {
      const remainingToImsak = calculateRemainingTime(currentDay.imsak);
      const remainingToIftar = calculateRemainingTime(currentDay.iftar);
      
      const imsakElement = document.getElementById("remainingToImsak");
      const iftarElement = document.getElementById("remainingToIftar");

      if (remainingToIftar < remainingToImsak) {
        imsakElement.classList.add("hidden");
        iftarElement.classList.remove("hidden");
        iftarElement.innerHTML = `
          <div class="max-w-4xl mx-auto">
            <article class="bg-white dark:bg-gray-700 shadow-lg rounded-lg overflow-hidden">
              <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">
                  İftara Kalan Süre
                </h3>
                <div class="mt-5">
                  <div class="mt-3 rounded-md bg-orange-50 p-4 dark:bg-gray-800">
                    <div class="flex items-center">
                      <div>
                        <span class="text-lg font-semibold text-orange-900 dark:text-orange-300">${remainingToIftar}</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </article>
          </div>
        `;
      } else {
        iftarElement.classList.add("hidden");
        imsakElement.classList.remove("hidden");
        imsakElement.innerHTML = `
          <div class="max-w-4xl mx-auto">
            <article class="bg-white dark:bg-gray-700 shadow-lg rounded-lg overflow-hidden">
              <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">
                  İmsak'a Kalan Süre
                </h3>
                <div class="mt-5">
                  <div class="mt-3 rounded-md bg-orange-50 p-4 dark:bg-gray-800">
                    <div class="flex items-center">
                      <div>
                        <span class="text-lg font-semibold text-orange-900 dark:text-orange-300">${remainingToImsak}</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </article>
          </div>
        `;
      }
    }

    updateRemainingTime();
    setInterval(updateRemainingTime, 1000);
  });
</script>
